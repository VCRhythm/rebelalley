<h1>Listing paths</h1>

<table>
  <tr>
    <th>Next</th>
    <th>Prev</th>
    <th>Clip</th>
    <th>Video</th>
    <th>When</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @paths.each do |path| %>
  <tr>
    <td><%= path.next %></td>
    <td><%= path.prev %></td>
    <td><%= path.clip_id %></td>
    <td><%= path.video_id %></td>
    <td><%= path.when %></td>
    <td><%= link_to 'Show', path %></td>
    <td><%= link_to 'Edit', edit_path_path(path) %></td>
    <td><%= link_to 'Destroy', path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

